if forecast
  - var indexNo = 1
  each location in locationBar.locationBarArray
    div(id=`locationBar-div` class=`middle-grid-item-${indexNo}`)
      div(title="locationBar" class='locationBar-div' id=`${locationBar[indexNo].locationBarBackGround}`)
        div(id="cityTime-div")
          p(id="locationTime")=`${locationBar[indexNo].liveFormattedTime}`
          p(indexno=`${indexno}` id="locationName")=`${locationBar[indexNo].locationName}`
        a(title="currentConditions" id="locationCondition" href="/weatherForecast:indexNo")
          i(title=`${locationBar[indexNo].currentConditions}` style="font-size:1.2em;" id="conditionIcon" class=`${locationBar[indexNo].wiClass}`)
          - var tempTypeC = document.getElementById("tempC").className
          - var tempTypeF = document.getElementById("tempF").className
          div(id="temp-div")
            if tempF == "wi wi-fahrenheit tempActive"
              p(class="tempType" title="Fahrenheit")=`${locationBar.fahrenheitFont}`
              p(id="currentTemp" title=`${locationBar.tempFahrenheit}`)=`${locationBar[indexNo].tempFahrenheit}`
            else
              p(class="tempType" title="Celsius")=`${locationBar.celsiusFont}`
              p(id="currentTemp" title=`${locationBar.tempCelsius}`)=`${locationBar[indexNo].tempCelsius}`
        div(indexno=`${indexNo}` title="remove" class="removeLocation")
    - indexNo += 1
