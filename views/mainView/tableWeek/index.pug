table(id="tableWeek")
  tbody
    tr
      th(id="dayOfWeek")
      th(id="forecastCondition")
      th(id="tempHigh")
      th(id="tempLow")
    each day in dailyConditions
      tr
        td(id="dayOfWeek")= `${day.day}`
        td(id="forecastCondition")
          if day.icon === 'cloudy'
            i(title=`${day.icon}` key=`${index}` class="wi wi-day-cloudy")
          else if day.icon === 'fog'
            i(title=`${day.icon}` key=`${index}` class="wi wi-day-fog")
          else if day.icon === 'partly-cloudy-day' ||  day.icon === 'partly-cloudy-night'
            i(title=`${day.icon}` key=`${index}`  class="wi wi-day-sunny-overcast")
          else if day.icon === 'rain'
            i(title=`${day.icon}` key=`${index}` class="wi wi-day-rain")
          else if day.icon === 'clear' ||  day.icon === 'clear-night' ||  day.icon === 'clear-day'
            i(title=`${day.icon}` key=`${index}` class="wi wi-day-sunny")
          else if day.icon === 'snow'
            i(title=`${day.icon}` key=`${index}` class="wi wi-day-snow")
          else if day.icon === 'scattered-showers'
            i(title=`${day.icon}` key=`${index}` class="wi wi-day-showers")
          else if day.icon === 'thunder'
            i(title=`${day.icon}` key=`${index}` class="wi wi-day-thunderstorm")
          else if day.icon === 'wind'
            i(title=`${day.icon}` key=`${index}` class="wi wi-day-windy")
        if tempTypeFahrenheit
          td(id="twTempHigh")=`${day.tempHighF}`
            span(id="todayTempType")=`${fahrenheitFont}`
          td(id="twTempLow")=`${day.tempLowF}`
            span(id="todayTempType")=`${fahrenheitFont}`
        else
          td(id="twTempHigh")=`${day.tempHighC}`
            span(id="todayTempType")=`${celsiusFont}`
          td(id="twTempLow")=`${day.tempLowC}`
            span(id="todayTempType")=`${celsiusFont}`
